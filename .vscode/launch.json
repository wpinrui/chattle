{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "frontend/lib/main.dart"
        },
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "program": "server/app.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_APP": "server/app.py",
                "FLASK_ENV": "development",
                "PYTHON_PATH": "${workspaceRoot\\server}"
            }
        }
    ]
}
